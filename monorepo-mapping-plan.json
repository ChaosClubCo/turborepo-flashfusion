    "migration_methods": {
      "git_subtree": {
        "description": "Full repository integration with history preservation",
        "use_case": "Core packages and applications that will be actively developed",
        "command_template": "git subtree add --prefix={destination_path} {repo_url} main --squash"
      },
      "npm_dependency": {
        "description": "Add as NPM dependency in package.json",
        "use_case": "Well-maintained public packages",
        "command_template": "npm install {package_name}"
      },
      "pip_dependency": {
        "description": "Add as Python dependency in requirements.txt",
        "use_case": "Well-maintained Python packages",
        "command_template": "pip install {package_name}"
      },
      "docker_compose": {
        "description": "Include via Docker Compose configuration",
        "use_case": "Services and tools that run as containers",
        "command_template": "Add service definition to docker-compose.yml"
      },
      "pattern_extraction": {
        "description": "Extract useful patterns and document in docs/",
        "use_case": "Large applications used for inspiration only",
        "command_template": "Manual analysis and documentation"
      },
      "archive": {
        "description": "Archive for future reference but don't actively maintain",
        "use_case": "Low-priority or superseded repositories",
        "command_template": "Move to archive/ directory with README"
      }
    },
